@import "../common/mixin"

#app{
  width:100%;
  height:100%;
}

.bg{
  position:fixed;
  width:100%;
  height:100%;
  background:#f2f2f2;
  z-index:-1;
}

.goods-item{
  width:100%;
  height:80px;
  display:flex;
  justify-content:space-between;
  align-items:center;
  background:#fafafa;
  padding:0 15px;
  margin-bottom:3px;
  &:last-child{
    margin-bottom:0;
  }
  .goods-item-pic{
    width:60px;
    height:60px;
    background-image:url(../../image/order/img40.png);
    background-position:center;
    background-size:cover;
    background-repeat:no-repeat;
  }
  .goods-item-right{
    width:calc(100% - 70px);
    height:76px;
    display:flex;
    flex-direction:column;
    justify-content:space-between;
    .goods-item-text{
      font-size:13px;
      color:$font;
      line-height: 18px;
      overflow: hidden;
      text-overflow: ellipsis;
      -webkit-box-orient: vertical;
      display: -webkit-box;
      -webkit-line-clamp: 2;
    }
    .goods-item-bottom{
      position:relative;
      display:flex;
      justify-content:space-between;
      align-items:center;
      .goods-item-bottom-notice{
        position:absolute;
        left:0;
        top:-22px;
        height:20px;
        line-height:20px;
        border:1px solid #ff6600;
        font-size:12px;
        color:#ff6600;
        padding:0 8px;
        border-radius:2px;
      }
      .goods-item-price{
        font-size:14px;
        color:$red;
      }
      .goods-item-num{
        font-size:12px;
        color:#333333;
        vertical-align:middle;
        .goods-item-num-pic{
          width:6px;
          height:6px;
          vertical-align:middle;
          margin-right:2px;
        }
      }
    }
  }
}

.btn-bar{
  padding:7px 15px;
  .submit-btn{
    float:right;
    width:70px;
    height:27px;
    text-align:center;
    line-height:27px;
    border:1px solid $red;
    border-radius:2px;
    font-size:14px;
    color:$red;
    margin-left:10px;
  }
  .cancel-btn{
    float:right;
    width:70px;
    height:27px;
    text-align:center;
    line-height:27px;
    border:1px solid #999;
    border-radius:2px;
    font-size:14px;
    color:#666666;
    margin-left:10px;
  }
  .see-btn{
    float:right;
    width:70px;
    height:27px;
    text-align:center;
    line-height:27px;
    border:1px solid $red;
    border-radius:2px;
    font-size:14px;
    color:$red;
    margin-left:10px;
  }
}

