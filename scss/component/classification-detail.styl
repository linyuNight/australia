@import "../common/mixin"

#app{
  width:100%;
  height:100%;
}

.bg{
  position:fixed;
  width:100%;
  height:100%;
  background:#f2f2f2;
  z-index:-1;
}

.classification-detail{
  position:absolute; 
  z-index:200;
  width:100%;
  height:100%;
  background:#f5f5f5;
  .goods-search{
    position:fixed;
    left:0;
    top:0;
    width:100%;
    height:50px;
    background:#fff;
    z-index:100;
    .goods-search-content-box{
      .goods-search-content{
        margin:0 auto;
        width:calc(100% - 30px);
        height:50px;
        display:flex;
        justify-content:space-between;
        align-items:center;
        overflow:hidden;
        .goods-search-input-contain{
          position:relative;
          width:100%;
          display:flex;
          justify-content:center;
          align-items:center;
          // transition: width .3s linear;
          .goods-search-input{
            width:100%;
            height:30px;
            border-radius:15px;
            background:#eaebed;
            padding:5px 0 5px 30px;
            font-size:13px;
            color:#999999;
            line-height:20px;
            background-image:url(../../image/goods-show/search.png);
            background-position:12px center;
            background-size:13px;
            background-repeat:no-repeat;
          }
          .clear-btn{
            display:none;
            position:absolute;
            right:10px;
            top:6px;
            width:18px;
            height:18px;
            background-image:url(../../image/classification/close.png);
            background-position:center;
            background-size:18px;
            background-repeat:no-repeat;
          }
          // .search-btn{
          //   position:absolute;
          //   right:-80px;
          //   top:0;
          //   width:60px;
          //   height:30px;
          // }
        }
      }
    }
  }
  .list-sort-contain{
    position:fixed;
    left:0;
    top:50px;
    width:100%;
    height:30px;
    padding-bottom:4px;
    display:flex;
    align-items:center;
    background:#fff;
    z-index:100;
    .list-sort-left,.list-sort-select{
      flex:1;
      text-align:center;
      line-height:26px;
    }
    .list-sort-right{
      width:20%;
      text-align:center;
      line-height:26px;
    }
    .list-sort-left-content{
      display:inline-block;
      vertical-align:center;
      height:20px;
      line-height:20px;
      font-size:13px;
      margin-left:30px;
      color:#999;
    }
    .list-sort-right-content{
      display:inline-block;
      vertical-align:center;
      height:20px;
      line-height:20px;
      font-size:13px;
      color:#999;
    }
    .list-sort-select-content{
      position:relative;
      display:inline-block;
      vertical-align:center;
      height:20px;
      line-height:20px;
      font-size:13px;
      margin-right:30px;
      color:#999;
      .list-sort-select-content-angle{
        position:absolute;
        right:-13px;
        top:50%;
        margin-top:-2px;
        width:8px;
        height:4px;
        bg('../../image/classification/icon01.png')
      }
    }
    .active{
      .list-sort-left-content{
        display:inline-block;
        vertical-align:center;
        height:20px;
        line-height:20px;
        color:$red;
        border-bottom:1px solid $red;
      }
      .list-sort-right-content{
        display:inline-block;
        vertical-align:center;
        height:20px;
        line-height:20px;
        color:$red;
        border-bottom:1px solid $red;
      }
    }
  }
  
  .goods-list{
    display:none;
    margin-top:85px;
    padding:0 5px;
    .goods-item{
      float:left;
      width:49.2%;
      background:#fff;
      margin-bottom:5px;
      &:nth-child(2n){
        float:right;
      }
      .goods-item-pic{
        width:100%;
        height:180px;
        background:#fff;
        borderbottom-1px($grey);
        background-image:url(../../image/classification/img19.png);
        background-position:center;
        background-size:contain;
        background-repeat:no-repeat;
      }
      .goods-item-title{
        width:100%;
        height:22px;
        padding:2px 10px 0;
        line-height:20px;
        font-size:12px;
        color:$gold;
        text-align:left;
        overflow: hidden;
        text-overflow: ellipsis;
        -webkit-box-orient: vertical;
        display: -webkit-box;
        -webkit-line-clamp: 1;
      }
      .goods-item-text{
        width:100%;
        height:38px;
        padding:0 10px 4px;
        line-height:18px;
        font-size:13px;
        color:$font;
        text-align:left;
        overflow: hidden;
        text-overflow: ellipsis;
        -webkit-box-orient: vertical;
        display: -webkit-box;
        -webkit-line-clamp: 2;
      }
      .goods-item-bottom{
        width:100%;
        height:21px;
        padding:2px 10px 10px 10px;
        display:flex;
        justify-content:space-between;
        align-items:center;
        .goods-item-price{
          font-size:14px;
          color:$red;
        }
        .goods-item-hassale{
          font-size:12px;
          transform:scale(.83)
          color:#999;
        }
      }
    }
  }
  .bottom-load-bar{
    bordertop-1px($grey);
    width:100%;
    height:50px;
    text-align:center;
    line-height:50px;
    font-size:13px;
    color:#000;
    background:#fff;
  }
  .empty-page{
    position:relative;
    width:100%;
    height:100%;
    overflow:hidden;
    .empty-round{
      position:absolute;
      left:50%;
      top:173px;
      width:880px;
      height:880px;
      margin-left:-440px;
      border-radius:50%;
      background:#fff;
      z-index:0;
    }
    .empty-content{
      position:absolute;
      width:100%;
      height:100%;
      z-index:1;
      .empty-icon{
        margin:91px auto 29px;
        width:110px;
        height:143px;
        bg('../../image/empty/search_empty.png');
      }
      .text-contain{
        width:100%;
        height:82px;
        .empty-text1{
          text-align:center;
          font-size:14px;
          color:#666666;
          height:26px;
          line-height:26px;
        }
        .empty-text2{
          text-align:center;
          font-size:12px;
          color:#000;
          height:23px;
          line-height:23px;
        }
      }
      .link-btn{
        margin:0 auto;
        width:84px;
        height:35px;
        line-height:35px;
        border-radius:3px;
        border:1px solid $red;
        text-align:center;
        font-size:16px;
        color:$red;
      }
    }
  }
  .empty-bg-bottom{
    position:absolute;
    left:0;
    bottom:0;
    width:100%;
    height:30%;
    background:#fff;
  }
}

.select-box{
  display:none;
  position:fixed;
  left:0;
  top:80px;
  bottom:0;
  width:100%;
  background:rgba(0,0,0,.7);
  z-index:1000;
  .select-box-main{
    width:100%;
    height:200px;
    overflow-y:scroll;
    overflow-x:hidden;
    background:#f2f2f2;
    padding:9px 0;
    -webkit-overflow-scrolling : touch; 
    .select-box-item{
      float:left;
      width:50%;
      height:31px;
      font-size:14px;
      color:#000;
      line-height:31px;
      padding:0 10px 0 30px;
      .select-box-item-font{
        float:left;
        width:calc(100% - 11px);
        overflow: hidden;
        text-overflow:ellipsis;
        white-space: nowrap;
      }
    }
    .active{
      color:$red;
      vertical-align:middle;
      .active-bg{
        float:right;
        width:11px;
        height:8px;
        margin-top :12px;
        bg('../../image/classification/selecte.png')
      }
    }
  }
  .select-box-footer{
    flex-between();
    width:100%;
    height:45px;
    background:#fff;
    .select-box-footer-Reset{
      width:50%;
      font-size:16px;
      color:#000;
      text-align:center;
      line-height:45px;
    }
    .select-box-footer-comfirm{
      width:50%;
      font-size:16px;
      color:$red;
      text-align:center;
      line-height:45px;
    }
  }
}