@import "../common/mixin"

#app{
  width:100%;
  height:100%;
}

.bg{
  position:fixed;
  width:100%;
  height:100%;
  background:#f2f2f2;
  z-index:-1;
}

.server-introduction{
  position:absolute; 
  z-index:200;
  width:100%;
  // height:100%;
  background:#f2f2f2;
  .banner{
    width:100%;
    height:85px;
    margin-bottom:8px;
    bg('../../image/server-introduction/title.png');
    background-szie:cover;
  }
  .server-introduction-item{
    width:100%;
    padding:20px 15px;
    background:#fff;
    margin-bottom:8px;
    &:last-child{
      margin-bottom:0;
    }
    .server-introduction-content-title{
      width:100%;
      margin-bottom:10px;
      .title-l{
        float:left;
        width:3px;
        height:16px;
        border-radius:2px;
        background:#e9574a;
        margin-right:8px;
      }
      .title-text{
        float:left;
        font-size:16px;
        color:#000;
        font-weight:bold;
      }
    }
    .title2{
      margin-bottom:20px;
    }
    .text-p{
      width:100%;
      font-size:13px;
      color:#333333;
      line-height:20px;
      margin-bottom:16px;
    }
    .text-pic{
      width:100%;
      flex-between();
      .text-pic1{
        width:94px;
        height:30px;
        bg('../../image/server-introduction/advantage01.png');
      }
      .text-pic2{
        width:94px;
        height:30px;
        bg('../../image/server-introduction/advantage02.png');
      }
      .text-pic3{
        width:94px;
        height:30px;
        bg('../../image/server-introduction/advantage03.png');
      }
    }
    .pic-text-list{
      width:100%;
      .pic-text-item{
        width:100%;
        height:65px;
        margin-bottom:30px;
        &:last-child{
          margin-bottom:0;
        }
        .pic-text-item-l{
          float:left;
          width:65px;
          height:65px;
        }
        .bg1{
          bg('../../image/server-introduction/icon01.png');
        }
        .bg2{
          bg('../../image/server-introduction/icon02.png');
        }
        .bg3{
          bg('../../image/server-introduction/icon03.png');
        }
        .pic-text-item-r{
          float:right;
          width:calc(100% - 75px);
          padding-top:8px;
          .pic-text-item-r-top{
            font-size:13px;
            font-weight:bold;
            margin-bottom:10px;
          }
          .pic-text-item-r-bottom{
            font-size:13px;
          }
        }
      }
    }
    .step{
      width:100%;
      margin-bottom:15px;
      .step-pic{
        float:left;
        width:62px;
        height:24px;
      }
      .step-pic1{
        bg('../../image/server-introduction/step1.png');        
      }
      .step-pic2{
        bg('../../image/server-introduction/step2.png');        
      }
      .step-pic3{
        bg('../../image/server-introduction/step3.png');        
      }
      .step-pic4{
        bg('../../image/server-introduction/step4.png');        
      }
      .step-text{
        float:right;
        width:calc(100% - 72px);
        line-height:24px;
        font-size:13px;
      }
      .step-text2{
        float:right;
        width:calc(100% - 72px);
        line-height:18px;
        font-size:12px;
        color:#999;      
      }
    }
    .bottom-notice{
      width:100%;
      padding:14px;
      border:1px dotted #ff7366;
      line-height:18px;
      font-size:13px;
      border-radius:2px;
    }
    .introduction-swiper{
      width:100%;
      height:200px;
      margin-bottom:30px;
      .bg1{
        bg('../../image/server-introduction/采购门店.png');
        background-szie:cover;
      }
      .bg2{
        bg('../../image/server-introduction/采购中.png');
        background-szie:cover;
      }
      .bg3{
        bg('../../image/server-introduction/打包中.png');
        background-szie:cover;
      }
      .bg4{
        bg('../../image/server-introduction/海带宝仓库.png');
        background-szie:cover;
      }
      .swiper-pagination-bullet{
        background:#fff;
        opacity:1;
      }
      .swiper-pagination-bullet-active{
        background:#e9574a;
      }
    }
    .introduction-bottom-img{
      margin:0 auto;
      width:140px;
      height:20px;
      bg('../../image/server-introduction/logo.png');
      margin-bottom:20px;
    }
    .introduction-bottom-text{
      width:100%;
      font-size:13px;
      line-height:18px;
      margin-bottom:18px;
    }
    .extension-btn{
      margin:0 auto;
      width:180px;
      height:36px;
      bg('../../image/server-introduction/button.png');
    }
  }
}