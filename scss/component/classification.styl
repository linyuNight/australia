@import "../common/mixin"

#app{
  width:100%;
  height:100%;
}

.bg{
  position:fixed;
  width:100%;
  height:100%;
  background:#f2f2f2;
  z-index:-1;
}

.tab{
  bordertop-1px($grey)
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height:50px;
  display:flex;
  justify-content:space-between;
  align-items:center;
  z-index:100;
  background:#fff;
  .tab-item{
    flex:1;
    height:50px;
    
    .tab-item-pic{
      position:relative;
      margin:7px auto 5px;
      width:20px;
      height:20px;
      background-position:center;
      background-size:contain;
      background-repeat:no-repeat;
      .purchase-num{
        position:absolute;
        left:10px;
        top:-6px;
        display:inline-block;
        background:$red;
        border-radius:9px;
        height:18px;
        line-height:18px;
        padding:0 6px;
        color:#fff;
        font-size:12px;
        transform:scale(.8);
      }
    }
    .tab-item-pic1{
      background-image:url(../../image/tab/home.png);
    }
    .tab-item-pic2{
      background-image:url(../../image/tab/category.png);
    }
    .tab-item-pic3{
      background-image:url(../../image/tab/find.png);
    }
    .tab-item-pic4{
      background-image:url(../../image/tab/money.png);
    }
    .tab-item-pic5{
      background-image:url(../../image/tab/cart.png);
    }
    .tab-item-text{
      text-align:center;
      font-size:12px;
      color:#424242;
    }
  }
  .router-link-exact-active{
    .tab-item-pic1{
      background-image:url(../../image/tab/home2.png);
    }
    .tab-item-pic2{
      background-image:url(../../image/tab/category2.png);
    }
    .tab-item-pic3{
      background-image:url(../../image/tab/find2.png);
    }
    .tab-item-pic4{
      background-image:url(../../image/tab/money2.png);
    }
    .tab-item-pic5{
      background-image:url(../../image/tab/cart2.png);
    }
    .tab-item-text{
      color:$red;
    }
  }
}

.classification{
  width:100%;
  height:100%;
  z-index:0;
  background:#f2f2f2;
  .goods-search-bg{
    display:none;
    position:fixed;
    width:100%;
    height:100%;
    background:#fff;
    z-index:75;
  }
  .goods-search{
    position:fixed;
    left:0;
    top:0;
    width:100%;
    height:93px;
    background:#fff;
    z-index:100;
    .goods-search-content-box{
      borderbottom-1px($grey)
      .goods-search-content{
        margin:0 auto;
        width:calc(100% - 30px);
        height:50px;
        display:flex;
        justify-content:space-between;
        align-items:center;
        overflow:hidden;
        .goods-search-input-contain{
          position:relative;
          width:100%;
          display:flex;
          justify-content:space-between;
          align-items:center;
          .return-pic{
            display:none;
            extend-click()
            width:11px;
            height:20px;
            background-image:url(../../image/goods-show/back.png);
            background-position:center;
            background-size:100%;
            background-repeat:no-repeat;
          }
          .goods-search-input{
            width:100%;
            height:30px;
            border-radius:15px;
            background:#eaebed;
            padding:5px 0 5px 30px;
            font-size:13px;
            color:#999999;
            line-height:20px;
            background-image:url(../../image/goods-show/search.png);
            background-position:12px center;
            background-size:13px;
            background-repeat:no-repeat;
          }
          .goods-search-input-focus{
            width:calc(100% - 100px);
          }
          .search-btn{
            display:none;
            extend-click()
            width:70px;
            height:27px;
            line-height:27px;
            text-align:center;
            font-size:13px;
            color:#fff;
            background:$red;
            border-radius:13.5px;
          }
        }
      }
    }
    .goods-list{
      width:100%;
      height:42px;
      overflow-y: hidden;
      .goods-list-contain{
        height: 100%;
        -webkit-box-sizing: content-box;
        box-sizing: content-box;
        overflow-x: scroll;
        overflow-y: hidden;
        -webkit-overflow-scrolling: touch;
        padding-bottom: 20px;
        .goods-list-box{
          width:384px;
          height:42px;
          overflow-x:scroll;
          overflow-y:hidden;
          padding:9px 15px;
          .goods-item{
            float:left;
            width:96px;
            height:24px;
            .goods-item-content{
              display:inline-block;
              // width:60px;
              height:24px;
              text-align:center;
              line-height:20px;
              font-size:14px;
              color:#666666;
            }
            &:last-child{
              width:60px;
            }
            .goods-item-content-active{
              color:#000;
              font-weight:bold;
              border-bottom:2px solid #e51c23;
            }
          }
        }
      }
    }
  }
