@import "../common/mixin"

#app{
  width:100%;
  height:100%;
}

.bg{
  position:fixed;
  width:100%;
  height:100%;
  background:#f2f2f2;
  z-index:-1;
}

.tab{
  bordertop-1px($grey)
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height:50px;
  display:flex;
  justify-content:space-between;
  align-items:center;
  z-index:100;
  background:#fff;
  // -webkit-backdrop-filter: blur(10px); /* Safari for macOS & iOS*/
  // backdrop-filter: blur(10px); /* Google Chrome */
  // background: rgba(255, 255, 255, 0.8);
  // background:#fff;
  // .background{
  //   position: absolute
  //   left: 0
  //   top: 0
  //   width: 100%
  //   height: 45px
  //   z-index: 200
  //   opacity: 0.6
  //   filter: blur(20px)
  // }
  .tab-item{
    flex:1;
    height:50px;
    
    .tab-item-pic{
      margin:7px auto 5px;
      width:20px;
      height:20px;
      background-position:center;
      background-size:contain;
      background-repeat:no-repeat;
    }
    .tab-item-pic1{
      background-image:url(../../image/tab/share.png);
    }
    .tab-item-pic2{
      background-image:url(../../image/tab/ranking.png);
    }
    .tab-item-pic3{
      background-image:url(../../image/tab/personal.png);
    }
    .tab-item-text{
      text-align:center;
      font-size:12px;
      color:#424242;
    }
  }
  .router-link-exact-active{
    .tab-item-pic1{
      background-image:url(../../image/tab/share2.png);
    }
    .tab-item-pic2{
      background-image:url(../../image/tab/ranking2.png);
    }
    .tab-item-pic3{
      background-image:url(../../image/tab/personal2.png);
    }
    .tab-item-text{
      color:$red;
    }
  }
}

.share{
  position:absolute; 
  width:100%;
  z-index:0;
  padding-bottom:50px;
  background:#f2f2f2;
  .share-top{
  	width:100%;
  	height:150px;
    bg('../../image/share/banner.png');
    background-size:cover;
  }
  .share-top-tab{
  	borderbottom-1px($grey)
  	display:flex;
  	justify-content:space-between;
  	align-items:center;
  	background:#fff;
  	padding:0 15px;
  	.share-top-tab-item{
  		flex:1;
  		text-align:center;
  		.share-top-tab-item-text{
  			display:inline-block;
  			line-height:43px;
  			height:43px;
	  		font-size:14px;
	  		color:#666666;
  		}
      &:last-child{
        .share-top-tab-item-text{
          position:relative;
          width:75px;
          .share-top-tab-item-text-font{
            width:75px;
            height:20px;
            line-height:20px;
            margin:11px 0;
            borderleft-1px($grey);
            span{
              vertical-align:middle;
              margin-right:5px;
            }
            .share-top-tab-item-text-pic{
              display:inline-block;
              vertical-align:middle;
              width:8px;
              height:4px;
              bg('../../image/share/screen.png');
            }
          }
          .share-top-tab-item-text-select{
            display:none;
            position:absolute;
            left:0;
            top:43px;
            width:75px;
            background:#fff;
            z-index:100;
            .share-top-tab-item-text-select-box{
              width:100%;
              borderleft-1px($grey);
              borderright-1px($grey);
              .share-top-tab-item-text-select-item{
                width:100%;
                text-align:center;
                height:40px;
                line-height:40px;
                borderbottom-1px($grey);
              }
              .share-top-tab-item-text-select-item-active{
                color:$red;
              }
            }
          }
        }
      }   
  	}
  	.share-top-tab-item-active{
  			z-index:100;
  		.share-top-tab-item-text{
  			color:$red;
  			border-bottom:2px solid $red;
  		}
  	}
  }
  .share-goods-list{
  	display:none;
  	width:100%;
	  .share-goods-item{
	  	width:100%;
	  	height:130px;
	  	padding:0 15px;
	  	background:#fff;
	  	.share-goods-item-content{
	  		borderbottom-1px($grey)
	  		width:100%;
	  		height:130px;
	  		padding:15px 0;
	  		display:flex;
		  	justify-content:space-between;
		  	align-items:center;
	  		.share-goods-item-pic{
	  			position:relative;
	  			width:100px;
	  			height:100px;
	  			background-image:url(../../image/share/img40.png);
		      background-position:center;
		      background-size:cover;
		      background-repeat:no-repeat;
		      .share-goods-item-pic-new{
		      	position:absolute;
		      	left:4px;
		      	top:0;
		      	width:15px;
		      	height:18px;
		      	background-image:url(../../image/share/new.png);
			      background-position:center;
			      background-size:100%;
			      background-repeat:no-repeat;
		      }
	  		}
	  		.share-goods-item-right{
          position:relative;   
	  			width:calc(100% - 115px);
	  			height:100px;
          padding:10px 0;
	  			display:flex;
	  			flex-direction:column;
			  	justify-content:space-between;
			  	align-items:center;
	  			.share-goods-item-right-top{
	  				width:100%;
	  				font-size:13px;
	  				color:$font;
	  				line-height:16px;
	  				overflow: hidden;
			      text-overflow: ellipsis;
			      -webkit-box-orient: vertical;
			      display: -webkit-box;
			      -webkit-line-clamp: 2;
	  			}
	        .share-goods-item-right-bottom{
	        	width:100%;
	        	display:flex;
				  	justify-content:space-between;
				  	align-items:center;
	          .share-goods-item-right-bottom-left{
	          	font-size:12px;
	          	color:#999;
              .has-num{
                margin-bottom:6px;
              }  
              .red-font{
                font-size:14px;
                color:$red;
                margin-left:4px;
              }
	          }
	          .share-goods-item-right-bottom-right{
              position: absolute;
              right:0;
              bottom:0;
	          	width:50px;
	          	height:50px;
	          	font-size:12px;
	          	color:#fff;
	          	background:$red;
	          	text-align:center;
              border-radius:50px;  
              padding-top:30px;
              bg('../../image/share/sharebtn.png');
              background-size:22px 15px
              background-position:center 10px;
	          }
	        }
	  		}
	  	}
	  	&:last-child{
	  		.share-goods-item-content:after{
	  			border-top:none;
	  		}
	  	}
	  }
  }
  .bottom-load-bar{
    bordertop-1px($grey);
    width:100%;
    height:50px;
    text-align:center;
    line-height:50px;
    font-size:13px;
    color:#000;
    background:#fff;
  }
}

.money-mask-box{
  // display:none;
  position:fixed;
  left:0;
  top:0;
  right:0;
  bottom:0;
  z-index:1000;
  .money-mask{
    position:absolute;
    left:0;
    top:0;
    right:0;
    bottom:0;
    background:rgba(0,0,0,.7);
    display: flex;
    align-items: center;
    justify-content: center;
    .money-mask-contain{
      position:relative;
      width:280px;
      height:326px;
      background:#fff;
      border-radius:20px;
      padding-top:29px;
      text-align:center;
      background-image:-webkit-linear-gradient(60deg,#fa5d5d,#ff7a5b);
      box-shadow:inset 0 0 18px rgba(0,0,0,.2)
      .money-mask-pic1{
        width:100%;
        height:49px;
        bg('../../image/share/arc.png');
        margin-bottom:26px;
      }
      .money-mask-pic2{
        margin:0 auto;
        width:155px;
        height:88px;
        bg('../../image/share/money.png');
        margin-bottom:25px;
      }
      .money-mask-text{
        font-size:20px;
        color:#fff;
        text-align:center;
        margin-bottom:20px;
      }
      .money-mask-btn-contain{
        margin:0 auto;
        width:175px;
        height:42px;
        background:#feb548;
        border-radius:2px;
        .money-mask-btn{
          width:175px;
          height:40px;
          line-height:40px;
          text-align:center;
          font-size:13px;
          color:#000;
          background:#ffda3f;
          border-radius:2px;
        }
      }
      .money-mask-close-btn{
        extend-click();
        position:absolute;
        right:25px;
        top:20px;
        width:11px;
        height:11px;
        bg('../../image/share/close.png');
      }
    }
  }
}