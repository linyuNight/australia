@import "../common/mixin"

#app{
  width:100%;
  height:100%;
}

.bg{
  position:fixed;
  width:100%;
  height:100%;
  background:#f2f2f2;
  z-index:-1;
}

.share-mask{
  position:fixed;
  left:0;
  top:0;
  right:0;
  bottom:0;
  background:rgba(0,0,0,.7);
  z-index:300;
  .share-mask-pc1{
    position:absolute;
    right:25px;
    top:11px;
    width:64px;
    height:53px;
    bg('../../image/share-mask/arrow.png');
  }
  .share-mask-pc2{
    position:absolute;
    right:100px;
    top:48px;
    width:111px;
    height:46px;
    bg('../../image/share-mask/font.png');
  }
  .share-mask-text{
    margin:107px auto 0;
    font-size:14px;
    color:#fff;
    height:63px;
    text-align:center;
    line-height:63px;
  }
  .share-mask-pc3{
    margin:0 auto;
    width:100px;
    height:40px;
    bg('../../image/share-mask/button.png');
  }
}

.evaluate-goods-item{
  margin:0 auto;
  width:100%;
  background:#fff;
  padding:0 15px;
  &:last-child{
    .evaluate-content{
      &:after{
        border-top:none;
      }
    }
  }
  .evaluate-content{
    borderbottom-1px($grey);
    width:100%;
    padding:15px 0;
    .evaluate-center-top{
      display:flex;
      justify-content:space-between;
      align-items:center;
      margin-bottom:8px;
      .evaluate-center-name{
        font-size:12px;
        color:#666666;
      }
      .evaluate-center-time{
        font-size:12px;
        color:#666666;
      }
    }
    .evaluate-center-text{
      line-height:18px;
      font-size:13px;
      color:#000;
    }
    .evaluate-center-pic-list{
      padding:6px 0
      .evaluate-center-pic-item{
        float:left;
        width:80px;
        height:80px;
        background-image:url(../../image/goods-detail/img36.png);
        background-position:center;
        background-size:cover;
        background-repeat:no-repeat;
        margin-right:8px;
      }
    }
  }
}

.swiper-pagination-bullet{
  width:8px!important;
  height:8px!important;
  background-color:#d7d7d7!important;
  margin:0 5px!important;
  opacity:1!important;
}
.swiper-pagination-bullet-active{
  border:1px solid #e51c23!important;
  background:#fff!important;
}

.goods-detail{
  position:absolute; 
  // overflow:scroll; 
  // -webkit-overflow-scrolling: touch; 
  // top:0; 
  // left:0; 
  // bottom:0; 
  // right:0;
  // background:#f5f5f5;
  z-index:200;
  width:100%;
  height:100%;
  background:#f2f2f2;
  .goods-detail-main{
    width:100%;
    padding:0 0 50px;
    .goods-detail-goods-box{
      width:100%;
      background:#fff;
      margin-bottom:8px;
      .goods-pic{
        position:relative;
        width:100%;
        height:325px;
        background:#f2f2f2;
        .miaosha{
          position:absolute;
          left:15px;
          top:15px;
          width:55px;
          height:55px;
          z-index:100;
          bg('../../image/goods-detail/miaosha.png')
        }
        .swiper-slide{
          background-image:url(../../image/goods-detail/1.jpg);
          background-position:center;
          background-size:100%;
          background-repeat:no-repeat;
        }
      }
      .goods-bottom-contain{
        width:100%;
        padding:10px 15px 5px;
        .goods-text-note{
          width:100%;
          height:20px;
          line-height:20px;
          font-size:13px;
          color:$gold;
        }
        .goods-text{
          line-height:24px;
          font-size:16px;
          color:$font;
        }
        .goods-bottom1{
          display:flex;
          justify-content:space-between;
          align-items:center;
          .goods-price-box{
            margin-left:-4px;
            .goods-new-price{
              min-width:102px;
              display:inline-block;
              font-size:24px;
              color:$red;
              position:relative;
              top:4px;
            }
            .goods-price-text{
              display:inline-block;
              font-size: 12px;
              color: #999;
              position:relative;
              top:3px;
            }
          }
          .goods-item-num-contain{
            display:flex;
            justify-content:space-between;
            align-items:center;
            .goods-item-num-minus{
              extend-click-left()
              width:30px;
              height:30px;
              border:1px solid $grey;
              border-radius:2px 0 0 2px;
              background-image:url(../../image/goods-detail/reduce.png);
              background-position:center;
              background-size:12px 1px;
              background-repeat:no-repeat;
            }
            .goods-item-num-input{
              width:30px;
              height:30px;
              border-top:1px solid $grey;
              border-bottom:1px solid $grey;
              text-align:center;
            }
            .goods-item-num-plus{
              extend-click-right()
              width:30px;
              height:30px;
              border:1px solid $grey;
              border-radius:0 2px 2px 0;
              background-image:url(../../image/goods-detail/increase.png);
              background-position:center;
              background-size:12px;
              background-repeat:no-repeat;
            }
          }
        }
        .goods-bottom2{
          display:flex;
          justify-content:space-between;
          align-items:center;
          .goods-old-price-contain{
            font-size:12px;
            color:#999999;
            height:31px;
            line-height:31px;
            .goods-old-price{
              min-width:100px;
              display:inline-block;
              font-size: 12px;
              color: #999;
            }
            .goods-price-text{
              display:inline-block;
              font-size: 12px;
              color: #999;
            }
          }
          .goods-note{
            font-size:12px;
            color:#999999;
            height:31px;
            line-height:31px;
          }
        }
      }
    }
    .goods-detail-goodsdetail-box{
      width:100%;
      background:#fff;
      .goodsdetail-header{
        width:100%;
        height:42px;
        line-height:42px;
        font-size:14px;
        font-weight:bold;
        color:#333;
        padding-left:15px;
        borderbottom-1px($grey);
      }
      .goodsdetail-top{
        width:100%;
      }
      .goodsdetail-main{
        width:100%;
        font-size:0;
        *{
          width:100%;
        }
        .goodsdetail-main-pic{
          width:100%;
        }
        .goodsdetail-main-video-contain{
          width:100%;
          .goodsdetail-main-video-contain-top{
            position:relative;
            width:100%;
            height:22px;
            background:#000;
            color:#fff;
            font-size:12px;
            padding-left:23px;
            line-height:22px;
            .goodsdetail-main-video-contain-top-triangle{
              position:absolute;
              left:10px;
              top:8px;
              width: 0;
              height: 0;
              border-top: 3px solid transparent;
              border-left: 5px solid #fff;
              border-bottom: 3px solid transparent;
            }
          }
          .goodsdetail-main-video{
            width:100%;
          }
        }
      }
      .goodsdetail-bottom{
        width:100%;
      }
    }
  }
  .goods-detail-footer{
    bordertop-1px($grey)
    position:fixed;
    left:0;
    bottom:0;
    width:100%;
    height:50px;
    background:#fff;
    z-index:210;
    display:flex;
    justify-content:space-between;
    align-items:center;
    // padding:0 15px;
    .goods-detail-footer-item{
      flex:1
      height:50px;
      .goods-detail-footer-item-pic{
        position:relative;
        margin:7px auto 5px;
        width:20px;
        height:20px;
        background-position:center;
        background-size:contain;
        background-repeat:no-repeat;
        .purchase-num{
          position:absolute;
          left:10px;
          top:-6px;
          display:inline-block;
          background:$red;
          border-radius:9px;
          height:18px;
          line-height:18px;
          padding:0 6px;
          color:#fff;
          font-size:12px;
          transform:scale(.8);
        }
      }
      .goods-detail-footer-item-pic0{
        background-image:url(../../image/goods-detail/icon.png);
      }
      .goods-detail-footer-item-pic1{
        background-image:url(../../image/tab/find.png);
      }
      .goods-detail-footer-item-pic2{
        background-image:url(../../image/tab/cart.png);
      }
      .goods-detail-footer-item-text{
        text-align:center;
        font-size:12px;
        color:#424242;
      }
    }
    .goods-detail-footer-add{
      width:113px;
      height:50px;
      text-align:center;
      line-height:50px;
      background:#ff9600;
      color:#fff;
      font-size:16px;
      z-index:220;
    }
    .goods-detail-footer-buy{
      width:113px;
      height:50px;
      text-align:center;
      line-height:50px;
      background:$red;
      color:#fff;
      font-size:16px;
      z-index:220;
    }
    .goods-detail-footer-add-disable{
      width:165px;
      height:50px;
      text-align:center;
      line-height:50px;
      background:#999;
      color:#fff;
      font-size:16px;
      z-index:220;
    }
  }
}