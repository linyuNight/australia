@import "../common/mixin"

#app{
  width:100%;
  height:100%;
}

.bg{
  position:fixed;
  width:100%;
  height:100%;
  background:#f2f2f2;
  z-index:-1;
}

.regist{
  position:absolute; 
  width:100%;
  z-index:0;
  background:#f2f2f2;
  .regist-title{
    width:100%;
    height:75px;
    line-height:75px;    
    font-size:16px;
    color:#000;
    text-align:center;
    font-weight:bold;
  }
  .regist-input{
    display:block;
    margin:0 auto 20px;;
    width:calc(100% - 85px);
    height:45px;
    border:1px solid $grey;
    border-radius:3px;
    font-size:14px;
    text-indent:15px;
  }
  .end{
    margin-bottom:30px;
  }
  .regist-btn{
    margin:0 auto 20px;;
    width:calc(100% - 85px);
    height:45px;
    line-height:45px;
    text-align:center;
    border-radius:3px;
    font-size:16px;
    color:#fff;
    background:$red;
  }
}